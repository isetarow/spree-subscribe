<!-- insert_bottom "[data-hook='cart_item_description']" -->
<% if line_item.subscription %>
  <div class="subscription-callout">
    Subscription: Deliver every <%= line_item.subscription.time_title %>.

    <% price_difference = Spree::Money.new(line_item.variant.price - line_item.variant.subscribed_price) %>
    <span class="price-saved">You save <%= price_difference.to_html %>!</span>
  </div>
<% end %>
